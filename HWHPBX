    <script>
        // User data
        const users = [
            { id: 'riyatcm', password: 'tcmriya', name: 'Riya' },
            { id: 'rajeshtcm', password: 'tcmrajesh', name: 'Rajesh' },
            { id: 'adityatcm', password: 'tcmaditya', name: 'Aditya' },
            { id: 'priyankasee', password: 'ssepriyanka', name: 'Priyanka' },
            { id: 'ranajitsse', password: 'sseranajit', name: 'Ranajit' },
            { id: 'suniltcm', password: 'tcmsunil', name: 'Sunil' }
        ];

        // Complaint data storage
        let complaints = JSON.parse(localStorage.getItem('complaints')) || [];
        let currentUser = null;
        let currentComplaintId = null;

        // DOM Elements
        const loginSection = document.getElementById('loginSection');
        const mainApp = document.getElementById('mainApp');
        const userInfo = document.getElementById('userInfo');
        const loginBtn = document.getElementById('loginBtn');
        const complaintForm = document.getElementById('complaintForm');
        const ongoingTable = document.getElementById('ongoingTable').getElementsByTagName('tbody')[0];
        const rectifiedTable = document.getElementById('rectifiedTable').getElementsByTagName('tbody')[0];
        const assignTechModal = document.getElementById('assignTechModal');
        const rectifyModal = document.getElementById('rectifyModal');
        const viewComplaintModal = document.getElementById('viewComplaintModal');

        // Initialize the application
        document.addEventListener('DOMContentLoaded', function() {
            // Check if user is already logged in
            const savedUser = localStorage.getItem('currentUser');
            if (savedUser) {
                currentUser = JSON.parse(savedUser);
                loginSection.style.display = 'none';
                mainApp.style.display = 'block';
                userInfo.innerHTML = `<span><i class="fas fa-user"></i> Hello ${currentUser.name}</span> <button class="logout-btn"><i class="fas fa-sign-out-alt"></i> Logout</button>`;
                renderComplaints();
                updateStats();
                
                // Add logout functionality
                document.querySelector('.logout-btn').addEventListener('click', logout);
            }
            
            // Add search functionality
            document.getElementById('searchOngoing').addEventListener('input', filterOngoingComplaints);
            document.getElementById('searchRectified').addEventListener('input', filterRectifiedComplaints);
        });

        // Login functionality
        loginBtn.addEventListener('click', function() {
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            
            const user = users.find(u => u.id === username && u.password === password);
            
            if (user) {
                currentUser = user;
                localStorage.setItem('currentUser', JSON.stringify(user));
                loginSection.style.display = 'none';
                mainApp.style.display = 'block';
                userInfo.innerHTML = `<span><i class="fas fa-user"></i> Hello ${user.name}</span> <button class="logout-btn"><i class="fas fa-sign-out-alt"></i> Logout</button>`;
                renderComplaints();
                updateStats();
                
                // Add logout functionality
                document.querySelector('.logout-btn').addEventListener('click', logout);
            } else {
                alert('Invalid username or password');
            }
        });

        // Logout functionality
        function logout() {
            currentUser = null;
            localStorage.removeItem('currentUser');
            loginSection.style.display = 'flex';
            mainApp.style.display = 'none';
            document.getElementById('username').value = '';
            document.getElementById('password').value = '';
        }

        // Generate a 5-digit complaint ID
        function generateComplaintId() {
            let id;
            do {
                id = Math.floor(10000 + Math.random() * 90000).toString();
            } while (complaints.some(complaint => complaint.id === id));
            return id;
        }

        // Handle complaint form submission
        complaintForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const complaint = {
                id: generateComplaintId(),
                telephoneNumber: document.getElementById('telephoneNumber').value,
                subscriber: document.getElementById('subscriber').value,
                address: document.getElementById('address').value,
                faultType: document.getElementById('faultType').value,
                complaintFrom: document.getElementById('complaintFrom').value,
                remarks: document.getElementById('remarks').value,
                dateTime: new Date().toLocaleString(),
                loggedBy: currentUser.name,
                informedTo: '',
                rectified: false,
                rectifiedBy: '',
                rectifiedOn: '',
                resolutionNotes: ''
            };
            
            complaints.push(complaint);
            localStorage.setItem('complaints', JSON.stringify(complaints));
            renderComplaints();
            updateStats();
            complaintForm.reset();
            
            alert(`Complaint registered successfully! Complaint ID: ${complaint.id}`);
        });

        // Render complaints in tables
        function renderComplaints() {
            // Clear tables
            ongoingTable.innerHTML = '';
            rectifiedTable.innerHTML = '';
            
            complaints.forEach(complaint => {
                const row = document.createElement('tr');
                
                if (!complaint.rectified) {
                    // Ongoing complaints
                    row.innerHTML = `
                        <td class="complaint-id">${complaint.id}</td>
                        <td>${complaint.dateTime}</td>
                        <td>${complaint.telephoneNumber}</td>
                        <td>${complaint.subscriber}</td>
                        <td>${complaint.faultType}</td>
                        <td>${complaint.loggedBy}</td>
                        <td>${complaint.informedTo || 'Not Assigned'}</td>
                        <td class="action-buttons">
                            <button class="action-btn view-complaint" data-id="${complaint.id}"><i class="fas fa-eye"></i> View</button>
                            ${!complaint.informedTo ? 
                                `<button class="action-btn assign-tech" data-id="${complaint.id}"><i class="fas fa-user-cog"></i> Assign Tech</button>` : 
                                `<button class="action-btn mark-rectified" data-id="${complaint.id}"><i class="fas fa-wrench"></i> Mark Rectified</button>`
                            }
                        </td>
                    `;
                    ongoingTable.appendChild(row);
                } else {
                    // Rectified complaints
                    row.innerHTML = `
                        <td class="complaint-id">${complaint.id}</td>
                        <td>${complaint.dateTime}</td>
                        <td>${complaint.telephoneNumber}</td>
                        <td>${complaint.subscriber}</td>
                        <td>${complaint.faultType}</td>
                        <td>${complaint.loggedBy}</td>
                        <td>${complaint.rectifiedBy}</td>
                        <td>${complaint.rectifiedOn}</td>
                    `;
                    rectifiedTable.appendChild(row);
                }
            });
            
            // Add event listeners to action buttons
            document.querySelectorAll('.view-complaint').forEach(button => {
                button.addEventListener('click', function() {
                    currentComplaintId = this.getAttribute('data-id');
                    showComplaintDetails(currentComplaintId);
                });
            });
            
            document.querySelectorAll('.assign-tech').forEach(button => {
                button.addEventListener('click', function() {
                    currentComplaintId = this.getAttribute('data-id');
                    assignTechModal.style.display = 'flex';
                });
            });
            
            document.querySelectorAll('.mark-rectified').forEach(button => {
                button.addEventListener('click', function() {
                    currentComplaintId = this.getAttribute('data-id');
                    rectifyModal.style.display = 'flex';
                });
            });
        }

        // Show complaint details
        function showComplaintDetails(complaintId) {
            const complaint = complaints.find(c => c.id === complaintId);
            if (complaint) {
                const detailsHtml = `
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px;">
                        <div><strong>Complaint ID:</strong></div><div class="complaint-id">${complaint.id}</div>
                        <div><strong>Date & Time:</strong></div><div>${complaint.dateTime}</div>
                        <div><strong>Telephone Number:</strong></div><div>${complaint.telephoneNumber}</div>
                        <div><strong>Subscriber:</strong></div><div>${complaint.subscriber}</div>
                        <div><strong>Address:</strong></div><div>${complaint.address}</div>
                        <div><strong>Fault Type:</strong></div><div>${complaint.faultType}</div>
                        <div><strong>Complaint From:</strong></div><div>${complaint.complaintFrom}</div>
                        <div><strong>Remarks:</strong></div><div>${complaint.remarks || 'N/A'}</div>
                        <div><strong>Logged By:</strong></div><div>${complaint.loggedBy}</div>
                        <div><strong>Informed To:</strong></div><div>${complaint.informedTo || 'Not Assigned'}</div>
                        ${complaint.rectified ? `
                            <div><strong>Rectified By:</strong></div><div>${complaint.rectifiedBy}</div>
                            <div><strong>Rectified On:</strong></div><div>${complaint.rectifiedOn}</div>
                            <div><strong>Resolution Notes:</strong></div><div>${complaint.resolutionNotes || 'N/A'}</div>
                        ` : ''}
                    </div>
                `;
                document.getElementById('complaintDetails').innerHTML = detailsHtml;
                viewComplaintModal.style.display = 'flex';
            }
        }

        // Assign technician functionality
        document.getElementById('saveTechBtn').addEventListener('click', function() {
            const technician = document.getElementById('technicianSelect').value;
            
            if (technician) {
                const complaint = complaints.find(c => c.id === currentComplaintId);
                if (complaint) {
                    complaint.informedTo = technician;
                    localStorage.setItem('complaints', JSON.stringify(complaints));
                    renderComplaints();
                    assignTechModal.style.display = 'none';
                    document.getElementById('technicianSelect').value = '';
                }
            } else {
                alert('Please select a technician');
            }
        });

        // Mark as rectified functionality
        document.getElementById('confirmRectifyBtn').addEventListener('click', function() {
            const technician = document.getElementById('rectifyTechSelect').value;
            const resolutionNotes = document.getElementById('resolutionNotes').value;
            
            if (technician) {
                const complaint = complaints.find(c => c.id === currentComplaintId);
                if (complaint) {
                    complaint.rectified = true;
                    complaint.rectifiedBy = technician;
                    complaint.rectifiedOn = new Date().toLocaleString();
                    complaint.resolutionNotes = resolutionNotes;
                    localStorage.setItem('complaints', JSON.stringify(complaints));
                    renderComplaints();
                    updateStats();
                    rectifyModal.style.display = 'none';
                    document.getElementById('rectifyTechSelect').value = '';
                    document.getElementById('resolutionNotes').value = '';
                }
            } else {
                alert('Please select a technician');
            }
        });

        // Update statistics
        function updateStats() {
            const total = complaints.length;
            const ongoing = complaints.filter(c => !c.rectified).length;
            const rectified = complaints.filter(c => c.rectified).length;
            
            // Today's complaints
            const today = new Date().toLocaleDateString();
            const todayCount = complaints.filter(c => {
                const complaintDate = new Date(c.dateTime).toLocaleDateString();
                return complaintDate === today;
            }).length;
            
            document.getElementById('totalComplaints').textContent = total;
            document.getElementById('ongoingComplaints').textContent = ongoing;
            document.getElementById('rectifiedComplaints').textContent = rectified;
            document.getElementById('todayComplaints').textContent = todayCount;
        }

        // Filter ongoing complaints
        function filterOngoingComplaints() {
            const searchTerm = document.getElementById('searchOngoing').value.toLowerCase();
            const rows = ongoingTable.getElementsByTagName('tr');
            
            for (let i = 0; i < rows.length; i++) {
                const row = rows[i];
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            }
        }

        // Filter rectified complaints
        function filterRectifiedComplaints() {
            const searchTerm = document.getElementById('searchRectified').value.toLowerCase();
            const rows = rectifiedTable.getElementsByTagName('tr');
            
            for (let i = 0; i < rows.length; i++) {
                const row = rows[i];
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            }
        }

        // Close modal functionality
        document.querySelectorAll('.close-modal, #cancelTechBtn, #cancelRectifyBtn, #closeViewBtn').forEach(button => {
            button.addEventListener('click', function() {
                assignTechModal.style.display = 'none';
                rectifyModal.style.display = 'none';
                viewComplaintModal.style.display = 'none';
            });
        });

        // Close modal when clicking outside
        window.addEventListener('click', function(e) {
            if (e.target === assignTechModal) {
                assignTechModal.style.display = 'none';
            }
            if (e.target === rectifyModal) {
                rectifyModal.style.display = 'none';
            }
            if (e.target === viewComplaintModal) {
                viewComplaintModal.style.display = 'none';
            }
        });
    </script>
</body>
</html>
